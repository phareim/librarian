{
  "name": "librarian",
  "version": "1.0.0",
  "description": "A helpful service that keeps taps on articles, books and their metadata.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "docker:build": "docker build -t librarian .",
    "docker:run": "docker run -p 3333:3000 -d librarian"
  },
  "dependencies": {
    "express": "^4.17.1",
    "genkit": "^1.0.0",
    "@genkit-ai/googleai": "^1.0.0",
    "zod": "^3.22.4",
    "axios": "^0.21.4",
    "jsdom": "^19.0.0",
    "@mozilla/readability": "^0.4.1",
    "turndown": "^7.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "@types/jsdom": "^16.2.14",
    "@types/mozilla-readability": "^0.2.0",
    "@types/turndown": "^5.0.1"
  }
} 